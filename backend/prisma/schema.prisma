generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
}


model User {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  email       String @unique
  password    String
  role        UserRole
  image       Image?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model StudentApplicant {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  appId       String
  firstname   String
  lastname    String
  email       String @unique
  phone       String
  address     String
  birthdate DateTime
  gender      String
  status      String
  educationalLevel  String
  program      String
  Documents  Documents[]
  createAt DateTime  @default(now())
}

model studentAdmission {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  appId       String
  firstname   String
  lastname    String
  email       String @unique
  phone       String
  address     String
  birthdate DateTime
  gender      String
  status      String
  Documents  String[]
}

model Student {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  studentId   String
  studentName String
  email       String
  program     String
  status      String
  documents   String[]
  academicYear  String
  semester      String
  subjects      String[]
  createAt DateTime  @default(now())
}

type Documents {
  name String
  required Boolean
  submitted Boolean
}

type Image {
  imageUrl    String
  publicId    String
}